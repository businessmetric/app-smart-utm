// для АФ скрипта если "undefined" или "(not set)" то не тащить параметр
// забирать куку last_utm_source тока соответствующего домена
// надо дождаться когда кука обновится 
//
// pid=utmcsr источник
// af_channel=utmcmd канал
// c=utmccn кампания
// af_ad=utmcct объявление
// af_keywords=utmctr условие показа
// af_siteid=utmhostname реферер домена перехода
// clickid=ga_sid ga_session_id
// af_sub1=pid партнерка
// af_sub2=signup рефералка
// af_sub3=gclid гугл клик id gclid
// af_sub4=fbclid фейсбук клик id fbclid
// af_sub5=twclid твиттер клик id twclid
</script>
